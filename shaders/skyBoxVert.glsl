//----------------------------------------------------------------------------------------------------------------------
/// @file skyBoxVert.glsl
/// @author Declan Russell
/// @date 15/03/15
/// @version 1.0
/// @brief Vertex shader for our sky box shader. Just passes through positions and tex coords and positions
//----------------------------------------------------------------------------------------------------------------------

#version 400

//----------------------------------------------------------------------------------------------------------------------
/// @brief vertex position buffer
//----------------------------------------------------------------------------------------------------------------------
layout (location = 0) in vec3 vertexPosition;
//----------------------------------------------------------------------------------------------------------------------
/// @brief Model view projection matrix uniform
//----------------------------------------------------------------------------------------------------------------------
uniform mat4 MVP;
//----------------------------------------------------------------------------------------------------------------------
/// @brief texture coords to be passed to our fragment shader
//----------------------------------------------------------------------------------------------------------------------
out vec3 texcoords;


//----------------------------------------------------------------------------------------------------------------------
/// @brief vertex shader main. Just passes texcoords and MVP*vertexPositons
//----------------------------------------------------------------------------------------------------------------------
void main () {
  texcoords = vertexPosition;
  gl_Position = MVP * vec4 (vertexPosition, 1.0);

}
