/// @namepsace GLSL
/// @class bilateralFilterVert
/// @brief Vertex shader for our bilateral filter shader. Just passes through positions and tex coords
//----------------------------------------------------------------------------------------------------------------------

#version 400

//----------------------------------------------------------------------------------------------------------------------
/// @brief our vertex postion buffer
//----------------------------------------------------------------------------------------------------------------------
layout (location = 0) in vec2 vertexPosition;
//----------------------------------------------------------------------------------------------------------------------
/// @brief our vertex texcoord buffer
//----------------------------------------------------------------------------------------------------------------------
layout (location = 1) in vec2 vertexTexCoord;

//----------------------------------------------------------------------------------------------------------------------
/// @brief texCoords to be passed to our fragment shader
//----------------------------------------------------------------------------------------------------------------------
out vec2 VTexCoord;


//----------------------------------------------------------------------------------------------------------------------
/// @brief our main vertex function
//----------------------------------------------------------------------------------------------------------------------
void main(void)
{
    VTexCoord = vertexTexCoord;
    gl_Position = vec4(vertexPosition,0,1);
}


